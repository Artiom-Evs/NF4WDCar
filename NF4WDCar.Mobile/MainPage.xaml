<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NF4WDCar.Mobile.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="selectDeviceButton"
                Grid.Row="0"
                Text="Select a device"
                Clicked="SelectDeviceButton_Clicked" />

        <Button x:Name="ledControlButton"
                Grid.Row="2"
                Text="Press to light up!"
                IsEnabled="False"
                Pressed="LedControlButton_Pressed"
                Released="LedControlButton_Released" />
    </Grid>

</ContentPage>
